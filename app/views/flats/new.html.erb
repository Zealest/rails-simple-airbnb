<h1>New Flat</h1>

<%= simple_form_for @flat do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Flat Name' %>
  </div>
  <div class="form-group">
    <%= f.input :address, label: 'Address' %>
  </div>
  <div class="form-group">
    <%= f.input :description, label: 'Description' %>
  </div>
  <div class="form-group">
    <%= f.input :price_per_night, label: 'Price per night (â‚¬)' %>
  </div>
  <div class="form-group">
    <%= f.input :number_of_guests, label: 'Number of guests' %>
  </div>
  <%= f.submit 'Create Flat', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
